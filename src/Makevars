PKG_LIBS = `$(R_HOME)/bin/Rscript -e "Rcpp:::LdFlags()"`
PKG_CXXFLAGS = -I. -DVERSION=\"1.7.6\" -I../inst/include

OBJECTS = microsimulation.o person-r.o calibperson-r.o simple-example.o simple-example2.o illness-death.o ssim.o RngStream.o tprocess.o pqueue.o init.o

all: $(SHLIB) staticLibrary

staticLibrary: $(SHLIB)
	       $(AR) cr ../inst/lib/libmicrosimulation.a $(OBJECTS)
	       $(RANLIB) ../inst/lib/libmicrosimulation.a
